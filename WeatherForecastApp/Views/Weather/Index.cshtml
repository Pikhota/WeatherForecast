@{
    ViewBag.Title = "Index";
}

<h2>Weather Forecast</h2>

<div>
    @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "weatherId" }))
    {
        <input type="text" name="city" placeholder="Your city name"/>
        <input class="btn btn-primary" type="submit" name="action:CurrentWeather" value="Current Weather" />
        <input class="btn btn-primary" type="submit" name="action:WeatherForecast" value="Forecast Weather" />
    }
    <div id="weatherId"></div>
</div>
@Scripts.Render("~/Scripts/jquery-3.3.1.min.js")
@Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.min.js")